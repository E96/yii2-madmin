{% extends 'parent.twig' %}

{% block setup %}
    {{ set(this, 'title', 'Просмотр ' ~ modelTitleForms[1]) }}
{% endblock %}

{% block buttons %}
    {#{{ html.a('<span class="glyphicon glyphicon-arrow-left"></span>Вернуться', returnUrl, {#}
        {#class: 'btn btn-default',#}
    {#}) | raw }}#}
    <a class="btn btn-primary" href="{{ path({ 0: 'update', id: model.id }) }}">
        <span class="glyphicon glyphicon-pencil"></span>Изменить {{ modelTitleForms[0] }}
    </a>
    <a class="btn btn-danger" href="{{ path({ 0: 'update', id: model.id }) }}"
            data-confirm="{{ yii.t('yii', 'Are you sure you want to delete this item?') }}"
            data-method="post">
        <span class="glyphicon glyphicon-trash"></span>Удалить {{ modelTitleForms[0] }}
    </a>
{% endblock %}

{% block content %}
    {{ use('yii/widgets/DetailView') }}
    {{ detailView_widget({
        model: model
    }) }}
{% endblock %}